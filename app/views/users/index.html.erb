<div class="row">


	<div class="span12">


      <h2><%=link_to "+Add New User", new_user_path%></h2>
     <table class="table">

     	<tr>

      <th>Name</th>
       <th>Hours</th>
      <th>Paid</th>
     

      </tr>

      <%@user.each do |user|%>

      <tr>

      <td><%= user.name%></td>
       <td><%= user.hours_worked%></td>
       <%if user.is_paid%>
        <td>Yes</td>
        <%else%>
        <td>No</td>
        <%end%>

        <td><%=link_to "Edit User", edit_user_path(user)%>| |<%=link_to "Delete User", user_path(user),
                                                               method: :delete, data:{confirm:"Are You Sure!"}%></td>
      </tr>

      <%end%>





     </table>





	</div>


</div>